<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".HomeActivity"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="#111111"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/dojo_movie"
                android:layout_marginRight="50dp" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/barlowcondensedbold"
                    android:textColor="#DEDEDE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dojo Movie adalah aplikasi toko digital penyedia film berkualitas tinggi, dirancang untuk penikmat sinema yang mengutamakan kualitas visual, audio, dan pengalaman menonton premium. Menawarkan koleksi film dari studio ternama dengan distribusi resmi, Dojo Movie menghadirkan layanan pembelian film yang aman, praktis, dan eksklusif langsung dari perangkat Anda."
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/barlowcondensedmedium"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Leadership Team"
                    android:layout_marginTop="30dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/barlowcondensedmedium"
                    android:textColor="@color/white" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <!-- Background Poster -->
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/delbert"
                        android:contentDescription="Dojo Logo"
                        android:layout_marginTop="25dp" />

                    <!-- Foreground Poster (Bottom Right Overlay) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/kuning"
                        android:background="@drawable/aboutus">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/barlowcondensedbold"
                            android:text="2702266751"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:fontFamily="@font/barlowcondensedmedium"
                    android:text="Delbert Melvin Setioso"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="90dp"
                    android:textColor="@color/kuning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/barlowcondensedmedium"
                    android:text="Back-End Developer"
                    android:layout_marginLeft="90dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <!-- Background Poster -->
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/rayden"
                        android:contentDescription="Dojo Logo"
                        android:layout_marginTop="25dp" />

                    <!-- Foreground Poster (Bottom Right Overlay) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/kuning"
                        android:background="@drawable/aboutus">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/barlowcondensedbold"
                            android:text="2702266801"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:fontFamily="@font/barlowcondensedmedium"
                    android:text="Rayden Blezworth Arwan"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="90dp"
                    android:textColor="@color/kuning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/barlowcondensedmedium"
                    android:text="Front-End Developer"
                    android:layout_marginLeft="90dp"
                    android:layout_marginBottom="50dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:paddingTop="50dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="#212121"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu"
        app:itemIconTint="@color/itemiconcolor"
        app:itemTextColor="@color/itemiconcolor"
        app:itemBackground="@drawable/color" />
</androidx.drawerlayout.widget.DrawerLayout>