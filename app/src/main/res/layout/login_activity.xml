<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    android:paddingTop="60dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dojo_movie"
            android:layout_marginBottom="130dp"
            />

        <EditText
            android:id="@+id/phoneNumLoginET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter Phone Number"
            android:textColorHint="#BFBFBF"
            android:layout_marginBottom="20dp"
            android:textSize="21dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/barlowcondensedmedium"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/PasswordLoginET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter Password"
            android:textColorHint="#BFBFBF"
            android:layout_marginBottom="40dp"
            android:textSize="21dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/barlowcondensedmedium"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/signInButton"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:backgroundTint="#EEBA2C"
            android:text="Sign In"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="10dp"
            tools:ignore="HardcodedText"
            android:fontFamily="@font/barlowcondensedbold"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/TextSignInNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlowcondensedmedium"
            android:text="Don't Have An Account? Register Now!!"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

</RelativeLayout>