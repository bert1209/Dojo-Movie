<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    tools:context=".RegisterActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/dojo_movie"
            android:layout_marginBottom="90dp"
            android:layout_marginTop="100dp"
            />

        <EditText
            android:id="@+id/phoneNumET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter Phone Number"
            android:textColorHint="#BFBFBF"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            android:inputType="number"
            android:fontFamily="@font/barlowcondensedmedium"
            />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:hint="Enter Password"
            android:textColorHint="#BFBFBF"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            android:inputType="textPassword"
            android:fontFamily="@font/barlowcondensedmedium"
            />

        <EditText
            android:id="@+id/confirmPasswordET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:hint="Confirm Password"
            android:textColorHint="#BFBFBF"
            android:layout_marginBottom="40dp"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            android:inputType="textPassword"
            android:fontFamily="@font/barlowcondensedmedium"
            />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:backgroundTint="#EEBA2C"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/barlowcondensedbold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="150dp"> <!-- Adjust margin as needed -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlowcondensedmedium"
            android:text="Already Have An Account? "
            android:textColor="#DEDEDE"/>

        <TextView
            android:id="@+id/textToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlowcondensedbold"
            android:text=" Log In Now!"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>